<!doctype html>
<html lang="ja">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1"/>
  <title>{{ L["app_title"] }}</title>
  <style>
    body{font-family:system-ui,-apple-system,Segoe UI,Roboto,Helvetica,Arial;background:#f5f6f8;color:#111;margin:0}
    .nav{display:flex;align-items:center;justify-content:space-between;padding:12px 18px;background:#fff;border-bottom:1px solid #e5e7eb;position:sticky;top:0;z-index:10}
    .brand{font-weight:800;font-size:22px;line-height:1.1}
    .muted{color:#64748b}
    .wrap{max-width:1100px;margin:24px auto;padding:0 18px}
    .btn{padding:8px 14px;border:1px solid #e5e7eb;border-radius:10px;background:#fff}
    .btn-primary{background:#2563eb;color:#fff;border-color:#2563eb}
    .btn-danger{background:#fff5f5;color:#b91c1c;border-color:#fecaca}
    a{color:inherit;text-decoration:none} a:hover{opacity:.85}
    .hidden { display: none; }  
  </style>
</head>
<body>
  <nav class="nav">
    <div class="brand">
      {% set uname = request.cookies.get('username') %}
      {% if uname %}
        {{ (L["owner_app_fmt"] | replace("{name}", uname) | replace("{app}", L["app_title"])) }}
      {% else %}
        {{ L["app_title"] }}
      {% endif %}
      <span class="muted" style="margin-left:12px;">{{ L["home"] }}</span>
    </div>

    <div style="display:flex;gap:10px;align-items:center;">
      <span>🌐</span>
      <a href="/lang?code=ja">{{ L["lang_ja"] }}</a> |
      <a href="/lang?code=en">{{ L["lang_en"] }}</a> |
      <a href="/lang?code=zh-Hant">{{ L["lang_zh_hant"] }}</a> |
      <a href="/lang?code=zh-Hans">{{ L["lang_zh_hans"] }}</a>

      {% if uname %}
        <a class="btn" href="/logout">{{ L["logout"] }}</a>
      {% else %}
        <a class="btn" href="/login">{{ L["login"] }}</a>
        <a class="btn" href="/register">{{ L["register"] }}</a>
      {% endif %}
    </div>
  </nav>

  <div class="wrap">
    {% block content %}{% endblock %}
  </div>
</body>
</html>
